@*  Delete a product
    Redirect to Product Manager Page
    once deleted/cancelled
*@

@model SportsPro.Models.Product

@{ ViewData["Title"] = "Delete Product"; }

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearlyPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearlyPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" asp-for="Name" />
        <input type="submit" value="Delete" class="btn btn-danger text-light" /> |
        <a asp-action="Index1" class="btn bg-dark text-light">Cancel</a>
    </form>
</div>

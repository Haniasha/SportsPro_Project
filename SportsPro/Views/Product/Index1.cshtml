@*  Product Manager page
    List of all the products in the database
*@

@model List<Product>

@{ ViewBag.Title = "Product Manager - "; }

<h2>Product Manager </h2>
<a asp-controller="Product" asp-action="Add" class="btn bg-dark text-light">Add Product</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Code</th>
            <th>Name</th>
            <th>Yearly price</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
<tr>
    <td>@product.ProductCode</td>
    <td>@product.Name</td>
    <td>@product.YearlyPrice</td>
    <td>@product.ReleaseDate</td>
    <td>
        <a asp-controller="Product" class="btn bg-dark text-light" asp-action="Edit"
           asp-route-id="@product.ProductID">Edit</a>
        <a asp-controller="Product" class="btn bg-dark text-light" asp-action="Delete"
           asp-route-id="@product.ProductID">Delete</a>
    </td>
</tr>
}
    </tbody>
</table>

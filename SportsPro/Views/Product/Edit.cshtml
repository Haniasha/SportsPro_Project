@*  Add/Edit a product
    Redirect to Product Manager Page
    once Added/Updated/Cancelled
*@

@model Product

@{ string title = ViewBag.Action + " Product";
    ViewBag.Title = title; }

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductCode">Product Code</label>
        <input asp-for="ProductCode" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="YearlyPrice">Yearly Price</label>
        <input asp-for="YearlyPrice" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control">
    </div>

    <input type="hidden" asp-for="ProductID" />

    <button type="submit" class="btn bg-dark text-light">Save</button>

    @if (ViewBag.Action == "Add" || ViewBag.Action == "Edit")
    {
<a asp-controller="Product" asp-action="Index1"
   class="btn bg-dark text-light">Cancel</a>}


</form>

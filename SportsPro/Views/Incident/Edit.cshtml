@*  Add/Edit an incident
    Redirect to Incident Manager Page
    once Added/Updated/Cancelled
*@

@model IncidentAddEditViewModel

@{ string title = Model.AddorEditAction + " Incident";
                ViewBag.Title = title; }

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Incident.CustomerID">Customer</label>
        <select asp-for="Incident.CustomerID" class="form-control">
            <vc:customer-drop-down selected-value=@Model.Incident.CustomerID>
            </vc:customer-drop-down>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Incident.ProductID">Product</label>
        <select asp-for="Incident.ProductID" class="form-control">
            <vc:product-drop-down selected-value=@Model.Incident.ProductID>
            </vc:product-drop-down>
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Incident.Title">Title</label>
        <input asp-for="Incident.Title" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.Description">Description</label>
        <input asp-for="Incident.Description" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.TechnicianID">Technician</label>
        <select asp-for="Incident.TechnicianID" class="form-control">
            <vc:technician-drop-down selected-value=@Model.Incident.TechnicianID>
            </vc:technician-drop-down>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Incident.DateOpened">Date Opened</label>
        <input asp-for="Incident.DateOpened" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Incident.DateClosed">Date Close</label>
        <input asp-for="Incident.DateClosed" class="form-control">
    </div>

    <input type="hidden" asp-for="Incident.IncidentID" />

    <button type="submit" class="btn bg-dark text-light">Save</button>

    @if (Model.AddorEditAction == "Add" || Model.AddorEditAction == "Edit")
    {
<a asp-controller="Incident" asp-action="Index4"
   class="btn bg-dark text-light">Cancel</a>}


</form>

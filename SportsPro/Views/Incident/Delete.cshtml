@{ ViewData["Title"] = "Delete Incident"; }

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Incident</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TechnicianID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TechnicianID)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOpened)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOpened)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateClosed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateClosed)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IncidentID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index4" class="btn bg-dark text-light">Cancel</a>
    </form>
</div>

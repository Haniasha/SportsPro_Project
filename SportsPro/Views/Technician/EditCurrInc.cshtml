@*  Add/Edit a technician
    Redirect to Incidents by Technician Page
    once Added/Updated/Cancelled
*@

@model IncidentMgrListViewModel

@{ string title = "Edit Incident";
    ViewBag.Title = title; }

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h2>@ViewBag.Title</h2>

<form asp-action="EditCurrInc" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label style="background-color: #C0C0C0;" asp-for="Incident.Technician.Name">Technician</label>
        <label style="background-color: #DCDCDC;" class="form-control">@Model.Incident.Technician.Name</label>
    </div>

    <div class="form-group">
        <label style="background-color: #C0C0C0;" asp-for="Incident.Customer.FullName">Customer</label>
        <label style="background-color: #DCDCDC;" class="form-control"> @Model.Incident.Customer.FullName</label>
    </div>

    <div class="form-group">
        <label style="background-color: #C0C0C0;" asp-for="Incident.Product.Name">Product</label>
        <label style="background-color: #DCDCDC;" class="form-control">@Model.Incident.Product.Name</label>
    </div>

    <div>
        <label style="background-color: #C0C0C0;" asp-for="Incident.DateOpened">Date Opened</label>
        <label style="background-color: #DCDCDC;" class="form-control">@Model.Incident.DateOpened</label>
    </div>

    <div>
        <label asp-for="Incident.Description">Description</label>
        <input asp-for="Incident.Description" class="form-control">
    </div>

    <div>
        <label asp-for="Incident.DateClosed">Date Closed</label>
        <input asp-for="Incident.DateClosed" class="form-control">
    </div>

    <input type="hidden" asp-for="Incident.IncidentID" />

    <button type="submit" class="btn bg-dark text-light">Save</button>

    @if (Model.AddorEditAction == "EditCurrInc")
    {
<a asp-controller="Technician" asp-action="Open" asp-route-TechnicianID="@Model.Incident.TechnicianID"
   class="btn bg-dark text-light">Cancel</a>}


</form>

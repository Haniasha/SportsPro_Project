@*  Add/Edit a technician
    Redirect to Technician Manager Page
    once Added/Updated/Cancelled
*@

@model Technician

@{ string title = ViewBag.Action + " Technician";
    ViewBag.Title = title; }

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <input type="hidden" asp-for="TechnicianID" />

    <button type="submit" class="btn bg-dark text-light">Save</button>

    @if (ViewBag.Action == "Add" || ViewBag.Action == "Edit")
    {
<a asp-controller="Technician" asp-action="Index2"
   class="btn bg-dark text-light">Cancel</a>}


</form>
